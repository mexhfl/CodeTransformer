{
  "name": "convert-text",
  "displayName": "convert-text",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "CodeTransformer.buildInFunctions": {
          "type": "array",
          "default": [],
          "description": "%configuration.buildInFunctions.description%",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the function."
              },
              "code": {
                "type": "string",
                "description": "The JavaScript code for the function."
              }
            },
            "required": [
              "name",
              "code"
            ]
          }
        },
        "CodeTransformer.presetExpressions": {
          "type": "array",
          "default": [],
          "description": "%configuration.presetExpressions.description%",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the script."
              },
              "code": {
                "type": "string",
                "description": "The JavaScript code for the script."
              }
            },
            "required": [
              "name",
              "script"
            ]
          }
        }
      }
    },
    "commands": [
      {
        "command": "CodeTransformer.CodeExpression",
        "title": "transform code extension"
      },
      {
        "command": "CodeTransformer.PickExpression",
        "title": "transform pick extension"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}